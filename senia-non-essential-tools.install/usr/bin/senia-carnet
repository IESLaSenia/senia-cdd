from PySide.QtCore import *
from PySide.QtGui import *

import sys
import os


if len(sys.argv) < 2:
	print(" [ERROR] : Al menos dos argumentos")
	print(" [USAGE] : senia-carnet ruta_a_la_foto")
	sys.exit(1)

foto = sys.argv[1]
if not os.path.exists(foto):
	print(" [ERROR] : La foto no existe -> " +foto )
	sys.exit(1)

# Obtenemos el nombre "canonico para Itaca"
def nameForItaca(ruta):
	nombre=os.path.basename(ruta)
	print(" [ Nombre ]: "+nombre)
	nombre2=os.path.splitext(nombre)[0]
	print(" [ Nombre Sin extension ]: "+nombre2)
	print(" [ PATH ] : "+os.path.dirname(ruta))
	return(os.path.dirname(ruta)+"/"+nombre2+".itaca.jpg")
		
	

app = QCoreApplication([])

ruta=nameForItaca(foto)
print(" [ Itaca ] : "+ruta)

